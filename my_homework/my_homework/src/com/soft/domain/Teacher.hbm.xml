<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="com.soft.domain.Teacher" table="teacher">
	<id name="teacherId" column="teacherId">
		<generator class="native"></generator>
	</id>
	<property name="account" column="account" length="50"/>
	<property name="password" column="password" length="50"/>
	<property name="teacherName" column="teacherName" length="50" />
	<property name="isFirstLogin" column="isFirstLogin" />
	<!-- 设置关联关系 -->
</class>


</hibernate-mapping>